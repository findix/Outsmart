<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/datetextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/Copyright"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="LOGO"
        android:src="@drawable/f" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:checked="true"
        android:text="ToggleButton"
        android:textOff="关闭短信识别"
        android:textOn="开启短信识别" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleButton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预设测试短信" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义测试短信" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" >

        <Button
            android:id="@+id/insertbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="插入自定义地点" />

        <Button
            android:id="@+id/cursorbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看自定义地点" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/datetextView1"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="25dp" >

        <Button
            android:id="@+id/backupbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备份数据库到SD卡" />

        <Button
            android:id="@+id/restorebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从SD卡还原数据库" />
    </LinearLayout>

    <Button
        android:id="@+id/calendarSetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/datetextView1"
        android:layout_centerHorizontal="true"
        android:text="设置日历" />

</RelativeLayout>